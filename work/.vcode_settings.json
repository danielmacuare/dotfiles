{
    "window.zoomLevel": 2,
    "workbench.colorTheme": "Predawn",
    "workbench.iconTheme": "ayu",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "python.pythonPath": "/Users/macuared/venvs/py3/bin",
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "editor.fontSize": 12,
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName"
    },
    "code-runner.showExecutionMessage": false,
    "code-runner.clearPreviousOutput": true,
    "git.autofetch": true,
    "git.autofetchPeriod": 120,
    "workbench.sideBar.location": "right",
    "remote.SSH.configFile": "/Users/macuared/.ssh/config",
    "remote.SSH.showLoginTerminal": true,
    "git.ignoreLegacyWarning": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.external.linuxExec": "iterm",
    "terminal.external.osxExec": "iterm.app",
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "terminal.integrated.shell.osx": "/bin/zsh",
    // VIM
    "vim.easymotion": true,
    "vim.easymotionMarkerBackgroundColor": "green",
    "vim.easymotionMarkerFontFamily": "MesloLGS NF",
    "vim.easymotionMarkerHeight": 19,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                " "
            ],
            "after": [
                "leader",
                "leader",
                "leader",
                "b",
                "d",
                "w"
            ]
        }
    ],
    "vim.useSystemClipboard": true,
    // For Cloudformation YAML
    "yaml.customTags": [
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap sequence",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Join sequence"
    ],
    "[yaml]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
    },
    "todo-tree.tree.showScanModeButton": false,
}
